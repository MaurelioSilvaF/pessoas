<h1>Lista de Pessoas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Sobrenome</th>
      <th>Email</th>
      <th>Empresa</th>
      <th>Função</th>
      <th>Fone</th>
      <th>Website</th>
      <th colspan="3">Opções</th>
    </tr>
  </thead>

  <tbody>
    <% @pessoas.each do |pessoa| %>
      <tr>
        <td><%= pessoa.name %></td>
        <td><%= pessoa.last_name %></td>
        <td><%= pessoa.email %></td>
        <td><%= pessoa.company %></td>
        <td><%= pessoa.job_title %></td>
        <td><%= pessoa.phone %></td>
        <td><%= pessoa.website %></td>
        <td><%= link_to 'Ver', pessoa %></td>
        <td><%= link_to 'Editar', edit_pessoa_path(pessoa) %></td>
        <td><%= link_to 'Excluir', pessoa, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Pessoa', new_pessoa_path %>
